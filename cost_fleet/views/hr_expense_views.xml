<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_expense_ext_form" model="ir.ui.view">
        <field name="name">view.hr.expense.ext.form</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
        <field name="arch" type="xml">
            <field name="tax_ids" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <!-- <field name="employee_id" position="attributes">
                <attribute name="readonly">1</attribute>
            </field> Revisar por tiene permiso de modificacion-->
        </field>
    </record>

    <record id="view_hr_expense_sheet_ext_form" model="ir.ui.view">
        <field name="name">view.hr.expense.sheet.ext.form</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form" />
        <field name="arch" type="xml">
            <field name="payment_mode" position="after">
                <label for="budget_expen" string="Budget Amount" />
                <div class="o_row">
                         <field name="budget_expen" width="" nolabel="1" />
                        <field name="budg_currency_id" nolabel="1" />
                </div>
            </field>
            <!-- <field name="employee_id" position="attributes">
                <attribute name="readonly">1</attribute>
            </field> Revisar por tiene permiso de modificacion-->
        </field>
    </record>
</odoo>